# Maintainer: Lionel Félicité <deogracia@free.fr>

pkgname=lha
pkgver=r930.6f6cbc1
pkgrel=1
pkgdesc="A compression and archive utility for LH-7 format archives"
arch=('i686' 'x86_64')
url="https://github.com/jca02266/${pkgname}.git"
license=('custom')
depends=('glibc')
makedepends=('git')
source=("git+https://github.com/jca02266/${pkgname}.git")
changelog=${pkgname}.changelog
sha256sums=('SKIP')

pkgver() {
  cd ${srcdir}/${pkgname}

  # Git, no tags available
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd ${srcdir}/${pkgname}

  autoreconf --force --install --symlink
  ./configure && make
}

check() {
  cd ${srcdir}/${pkgname}
  make check

  exit 1
}

package() {
  cd ${srcdir}/${pkgname}
  install -D -m755 ${srcdir}/lha ${pkgdir}/usr/bin/lha
  install -D -m644 ${srcdir}/lha.man ${pkgdir}/usr/share/man/ja/man1/lha.1
  install -D -m644 ${srcdir}/lha.man.en ${pkgdir}/usr/share/man/man1/lha.1
  install -D -m644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
