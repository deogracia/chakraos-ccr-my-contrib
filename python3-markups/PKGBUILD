pkgname=python3-markups
pkgver=0.6.0
pkgrel=2
_libname=Markups
pkgdesc='Wrapper around various text markups'
url='http://launchpad.net/python-markups'
depends=('python3')
optdepends=('python3-markdown: markdown support'
            'python3-docutils: reST support')
makedepends=('python3-setuptools')
license=('BSD')
arch=('any')
source=(http://pypi.python.org/packages/source/${_libname:0:1}/$_libname/$_libname-$pkgver.tar.gz)

sha256sums=('e601e9a9fff58403b4e2de3b8e8c34ce33a8604549c2344c569d815ae0e803f1')

package () {
    cd "$srcdir/$_libname-$pkgver"
    python3 setup.py install --root="$pkgdir"
}

