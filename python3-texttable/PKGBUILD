# Maintainer: Lionel Félicité <deogracia@free.fr>

pkgname=python3-texttable
pkgver=0.8.4
pkgrel=1
pkgdesc="Generate a formatted text table using ASCII characters"
arch=('any')
url="https://pypi.python.org/pypi/texttable/"
license=('LGPL')
depends=('python3')
makedepends=('python3')
changelog=$pkgname.changelog
source=("https://pypi.python.org/packages/source/t/texttable/texttable-${pkgver}.tar.gz"
        "texttable_set-python3.patch")
sha512sums=('18c128da721f25d4cf8b2f2d740c9ce2ded81135d2843e1d46d3e230b59820a7d6d1f7b3e0245cbc6208f3e16ac9181e0b1f56206e53acd9966616e539e91639'
            'a9927aef9d4a719388e4f61652f21411db8c9f960040dd84b2d3f905984a6520ea49926a887f8db1a7fc901b13fda4f6837ae34fc110bde250ab9be5edbfa02f')
prepare(){
  cd "$srcdir/texttable-$pkgver"
  patch -p0 < ../texttable_set-python3.patch

}
build() {
  cd "$srcdir/texttable-$pkgver"
  python3 setup.py build
}

package() {

  cd "$srcdir/texttable-$pkgver"
  python3 setup.py install --root="$pkgdir/" --optimize=1
}
